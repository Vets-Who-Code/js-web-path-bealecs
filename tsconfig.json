{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "jsx": "react-jsx",
    "target": "es2016", 
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
                
    "isolatedModules": true,                          
    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "noImplicitAny": true,                           
    "skipLibCheck": true                               
  }
}
